<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosingStoreActivity"
    android:background="@color/white">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Choose Store"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.569"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112" />

    <Button
        android:id="@+id/ChooseStore1Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:text="Hannaford Manchester NH"/>

    <Button
        android:id="@+id/ChooseStore2Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Londonderry NH Market Basket"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseStore1Button"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="200dp"/>

    <Button
        android:id="@+id/ChooseStore3Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Hooksett NH Whole Foods"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseStore2Button"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="150dp"/>

    <Button
        android:id="@+id/ChooseStore4Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ChooseStore3Button"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="0dp"
        android:text="Hannaford Manchester NH"/>






</androidx.constraintlayout.widget.ConstraintLayout>

